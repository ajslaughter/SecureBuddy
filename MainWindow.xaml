<Window x:Class="CyberShieldBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="CyberShield Buddy" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,20,0,20">
            <TextBlock Text="CyberShield Buddy" Style="{StaticResource TitleTextBlockStyle}" 
                       HorizontalAlignment="Center" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
            <TextBlock Text="Your Personal Cybersecurity Coach" 
                       HorizontalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}" Opacity="0.6"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel MaxWidth="800" HorizontalAlignment="Center">
                
                <!-- Health Monitor Section -->
                <Border CornerRadius="12" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="30" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="System Health" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center"/>
                        
                        <!-- Visual Score Indicator -->
                        <Grid Margin="0,20">
                            <Ellipse Width="150" Height="150" StrokeThickness="8" Stroke="{DynamicResource SystemControlBackgroundBaseLowBrush}"/>
                            <Ellipse x:Name="HealthStatusRing" Width="150" Height="150" StrokeThickness="8" Stroke="Gray"/>
                            
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock x:Name="ScoreText" Text="?" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="StatusText" Text="Unknown" HorizontalAlignment="Center" Opacity="0.7"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <Button x:Name="ScanButton" Content="Scan Now" Width="180" Height="50" 
                                    Click="ScanButton_Click" FontSize="18" Margin="0,0,10,0"/>
                            <Button x:Name="HardenButton" Content="Harden Now" Width="180" Height="50" 
                                    Click="HardenButton_Click" FontSize="18" 
                                    Background="#27AE60" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                                
                        <ItemsControl x:Name="IssuesList" Margin="0,20,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#E74C3C" HorizontalAlignment="Center" Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Tools Grid -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Phishing Buster -->
                    <Border Grid.Column="0" CornerRadius="12" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20">
                         <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="ðŸ”— Link Checker" Style="{StaticResource SubheaderTextBlockStyle}" Margin="0,0,0,10"/>
                            <TextBlock Text="Paste a link to check for phishing red flags." Opacity="0.6" TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <TextBox x:Name="UrlInput" ui:ControlHelper.PlaceholderText="https://example.com" Margin="0,0,0,10"/>
                            <Button Content="Check Link" HorizontalAlignment="Stretch" Click="CheckLink_Click" Margin="0,0,0,10"/>
                            <TextBlock x:Name="PhishingResult" TextWrapping="Wrap" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Fix My Screen -->
                    <Border Grid.Column="2" CornerRadius="12" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20">
                         <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Fix My Screen" Style="{StaticResource SubheaderTextBlockStyle}" Margin="0,0,0,10"/>
                            <TextBlock Text="Screen glitching or multi-monitor issues?" Opacity="0.6" TextWrapping="Wrap" Margin="0,0,0,10"/>
                            <Button Content="Fix Resolution" HorizontalAlignment="Stretch" Click="FixScreen_Click" Background="#E74C3C" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Network Guardian -->
                <Border CornerRadius="12" Background="{DynamicResource SystemControlBackgroundAltHighBrush}" Padding="20" Margin="0,20,0,0">
                     <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Network Guardian" Style="{StaticResource SubheaderTextBlockStyle}" Margin="0,0,0,10"/>
                        <TextBlock Text="Active connections on your device." Opacity="0.6" Margin="0,0,0,10"/>
                        <Button Content="Refresh Map" Click="RefreshNetwork_Click" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                        <ListView x:Name="NetworkList" Height="150" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="App" DisplayMemberBinding="{Binding ProcessName}" Width="150"/>
                                    <GridViewColumn Header="Remote Address" DisplayMemberBinding="{Binding RemoteAddress}" Width="150"/>
                                    <GridViewColumn Header="State" DisplayMemberBinding="{Binding State}" Width="100"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
