<Window x:Class="CyberShieldBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="CyberShield Buddy" Height="900" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource SlateBackgroundBrush}"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.Background="{StaticResource SlateBackgroundBrush}"
        ui:TitleBar.Foreground="{StaticResource TextPrimaryBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SlateBackgroundBrush}" Padding="0,24,0,16">
            <StackPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                    <!-- Shield Icon using Segoe MDL2 Assets -->
                    <TextBlock Text="&#xE83D;" FontFamily="Segoe MDL2 Assets" FontSize="36"
                               Foreground="{StaticResource IndigoAccentBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="CyberShield Buddy" FontSize="32" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Your Personal Cybersecurity Coach" FontSize="16"
                           Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" Padding="32,16,32,32" Background="{StaticResource SlateBackgroundBrush}">
            <StackPanel MaxWidth="900" HorizontalAlignment="Center">

                <!-- Health Monitor Section -->
                <Border Style="{StaticResource DarkCardStyle}" Margin="0,0,0,24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Circular Progress Ring -->
                        <Grid Grid.Column="0" Margin="0,0,40,0" Width="180" Height="180">
                            <!-- Background Ring -->
                            <Ellipse Width="180" Height="180" StrokeThickness="12"
                                     Stroke="{StaticResource ProgressRingBackgroundBrush}" Fill="Transparent"/>

                            <!-- Progress Ring (Arc) -->
                            <Canvas Width="180" Height="180">
                                <Path x:Name="ProgressArc" StrokeThickness="12" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                    <Path.Stroke>
                                        <SolidColorBrush x:Name="ProgressArcBrush" Color="{StaticResource TextMuted}"/>
                                    </Path.Stroke>
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathFigure x:Name="ProgressFigure" StartPoint="90,6">
                                                <ArcSegment x:Name="ProgressArcSegment"
                                                            Size="84,84"
                                                            SweepDirection="Clockwise"
                                                            IsLargeArc="False"
                                                            Point="90,6"/>
                                            </PathFigure>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>
                            </Canvas>

                            <!-- Score Display -->
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock x:Name="ScoreText" Text="?" FontSize="56" FontWeight="Bold"
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="StatusText" Text="Tap Scan" FontSize="14"
                                           Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Health Info and Actions -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="{StaticResource IndigoAccentBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                <TextBlock Text="System Health" FontSize="24" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Analyze your system's security posture and apply hardening measures."
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" Margin="0,0,0,20" MaxWidth="400"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <Button x:Name="ScanButton" Style="{StaticResource AccentButtonStyle}"
                                        Width="160" Height="48" Click="ScanButton_Click" Margin="0,0,12,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Scan Now" FontSize="16" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="HardenButton" Style="{StaticResource SafeButtonStyle}"
                                        Width="160" Height="48" Click="HardenButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE9D5;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="Harden Now" FontSize="16" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Security Status Cards -->
                <Border Style="{StaticResource DarkCardStyle}" Margin="0,0,0,24" x:Name="SecurityCardsSection" Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xE83D;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                       Foreground="{StaticResource IndigoAccentBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Security Settings" FontSize="20" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Click each card to learn more" FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <ItemsControl x:Name="SecurityChecksList">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="6" CornerRadius="12" Padding="16" Cursor="Hand"
                                            MouseLeftButtonUp="SecurityCard_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#1a3a2a" Offset="0"/>
                                                            <GradientStop Color="#0f2a1a" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="BorderBrush" Value="#2a5a3a"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="#3a3a1a" Offset="0"/>
                                                                    <GradientStop Color="#2a2a0f" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="BorderBrush" Value="#5a5a2a"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Unsafe">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="#3a1a2a" Offset="0"/>
                                                                    <GradientStop Color="#2a0f1a" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="BorderBrush" Value="#5a2a3a"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header Row -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Icon -->
                                                <Border Grid.Column="0" Background="#1e293b" CornerRadius="10"
                                                        Width="40" Height="40" Margin="0,0,12,0">
                                                    <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Title and Status Text -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="11"
                                                                   VerticalAlignment="Center" Margin="0,0,4,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="&#xE73E;"/>
                                                                    <Setter Property="Foreground" Value="{StaticResource EmeraldSafeBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                                            <Setter Property="Text" Value="&#xE7BA;"/>
                                                                            <Setter Property="Foreground" Value="{StaticResource AmberWarningBrush}"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Unsafe">
                                                                            <Setter Property="Text" Value="&#xE711;"/>
                                                                            <Setter Property="Foreground" Value="{StaticResource RoseDangerBrush}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding StatusText}" FontSize="11">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="{StaticResource EmeraldSafeBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                                            <Setter Property="Foreground" Value="{StaticResource AmberWarningBrush}"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Unsafe">
                                                                            <Setter Property="Foreground" Value="{StaticResource RoseDangerBrush}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Status Icon (Right Side) -->
                                                <TextBlock Grid.Column="2" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                                           VerticalAlignment="Center" HorizontalAlignment="Right">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="&#xE73E;"/>
                                                            <Setter Property="Foreground" Value="{StaticResource EmeraldSafeBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Warning">
                                                                    <Setter Property="Text" Value="&#xE7BA;"/>
                                                                    <Setter Property="Foreground" Value="{StaticResource AmberWarningBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Unsafe">
                                                                    <Setter Property="Text" Value="&#xE711;"/>
                                                                    <Setter Property="Foreground" Value="{StaticResource RoseDangerBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>

                                            <!-- Expandable Details (shown via tooltip for now) -->
                                            <Border Grid.Row="1" Margin="0,12,0,0" Padding="12" CornerRadius="8"
                                                    Background="#0f172a" BorderBrush="#1e293b" BorderThickness="1">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding CurrentMessage}" FontSize="12"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               TextWrapping="Wrap"/>
                                                    <Border Background="#1e293b" CornerRadius="6" Padding="10" Margin="0,10,0,0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                                                       Foreground="{StaticResource IndigoAccentBrush}"
                                                                       VerticalAlignment="Top" Margin="0,1,8,0"/>
                                                            <TextBlock Text="{Binding Tip}" FontSize="11"
                                                                       Foreground="{StaticResource TextMutedBrush}"
                                                                       TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Tools Grid -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Link Checker -->
                    <Border Grid.Column="0" Style="{StaticResource DarkCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="{StaticResource IndigoAccentBrush}" CornerRadius="10"
                                        Width="44" Height="44" Margin="0,0,14,0">
                                    <TextBlock Text="&#xE71B;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Link Checker" FontSize="18" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Detect phishing attempts" FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                            </StackPanel>

                            <TextBlock Text="Paste a URL to analyze it for potential phishing red flags and security risks."
                                       FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" Margin="0,0,0,16"/>

                            <TextBox x:Name="UrlInput" ui:ControlHelper.PlaceholderText="https://example.com"
                                     FontSize="14" Margin="0,0,0,12"/>

                            <Button Content="Check Link" Style="{StaticResource AccentButtonStyle}"
                                    HorizontalAlignment="Stretch" Height="40" Click="CheckLink_Click" Margin="0,0,0,12"/>

                            <Border x:Name="PhishingResultBorder" CornerRadius="10" Padding="14"
                                    Background="#1a2744" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="PhishingResultIcon" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock x:Name="PhishingResult" TextWrapping="Wrap" FontSize="13"
                                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Fix My Screen -->
                    <Border Grid.Column="2" Style="{StaticResource DarkCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Background="{StaticResource RoseDangerBrush}" CornerRadius="10"
                                        Width="44" Height="44" Margin="0,0,14,0">
                                    <TextBlock Text="&#xE7F4;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Fix My Screen" FontSize="18" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Display troubleshooter" FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                            </StackPanel>

                            <TextBlock Text="Experiencing screen glitches, multi-monitor problems, or resolution issues? This tool will reset your display drivers."
                                       FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap" Margin="0,0,0,16"/>

                            <Button Style="{StaticResource DangerButtonStyle}"
                                    HorizontalAlignment="Stretch" Height="40" Click="FixScreen_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Fix Resolution" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Border Background="#1a2744" CornerRadius="10" Padding="14" Margin="0,16,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                               Foreground="{StaticResource AmberWarningBrush}"
                                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Text="Requires administrator privileges" FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Network Guardian -->
                <Border Style="{StaticResource DarkCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0">
                                <Border Background="{StaticResource EmeraldSafeBrush}" CornerRadius="10"
                                        Width="44" Height="44" Margin="0,0,14,0">
                                    <TextBlock Text="&#xE968;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Network Guardian" FontSize="18" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Monitor active connections" FontSize="12"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1" Style="{StaticResource AccentButtonStyle}"
                                    Height="40" Click="RefreshNetwork_Click" Padding="16,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Refresh" FontSize="14" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <TextBlock Text="View all active network connections on your device to detect suspicious activity."
                                   FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap" Margin="0,0,0,16"/>

                        <Border Background="#0f172a" CornerRadius="12" Padding="4">
                            <ListView x:Name="NetworkList" Height="180"
                                      Background="Transparent" BorderThickness="0"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListView.Resources>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="#1e293b"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        <Setter Property="Padding" Value="12,10"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </ListView.Resources>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="APPLICATION" DisplayMemberBinding="{Binding ProcessName}" Width="200"/>
                                        <GridViewColumn Header="REMOTE ADDRESS" DisplayMemberBinding="{Binding RemoteAddress}" Width="280"/>
                                        <GridViewColumn Header="STATE" DisplayMemberBinding="{Binding State}" Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Footer -->
                <Border Margin="0,24,0,0" Padding="16">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Powered by CyberShield Engine" FontSize="12"
                                   Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
